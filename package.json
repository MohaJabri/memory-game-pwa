        "test": "jest",
        "deploy": "gh-pages -d dist"
    },
    "author": "Tu Nombre",
    "license": "MIT",
    "dependencies": {
        "http-server": "^14.0.0",
        "lit": "^3.2.1",
        "lit-router": "^0.2.2"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@parcel/packager-raw-url": "^2.13.0",
        "@parcel/transformer-webmanifest": "^2.13.0",
        "eslint": "^8.0.0",
        "gh-pages": "^3.2.3",
        "jest": "^29.0.0",
        "parcel": "^2.0.0"
    }
}
