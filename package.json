{
    "name": "memory-game-pwa",
    "version": "1.0.0",
    "description": "Juego de memoria con LitElement como PWA y persistencia usando IndexedDB",
    "main": "index.js",
    "scripts": {
        "start": "parcel ./index.html",
        "build": "parcel build index.html --public-url ./",
