{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:lit/recommended",
        "plugin:wc/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "lit",
        "wc"
    ],
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": "warn",
        "lit/no-invalid-html": "error",
        "lit/no-duplicate-template-bindings": "error",
        "wc/no-invalid-element-name": "error"
    },
    "ignorePatterns": [
        "dist/*",
        "node_modules/*"
    ]
} 