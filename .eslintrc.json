{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:lit/recommended",
        "plugin:wc/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "lit",
        "wc"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "lit/no-invalid-html": "error",
        "lit/no-duplicate-template-bindings": "error",
        "wc/no-invalid-element-name": "error"
    },
    "ignorePatterns": [
        "dist/*",
        "node_modules/*"
    ]
} 